<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient1"
    android:padding="@dimen/default_padding">
    <TextView
        android:id="@+id/ingredient_steps_quantity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        tools:text="300"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginRight="@dimen/ingredient_item_margin"
        android:layout_marginEnd="@dimen/ingredient_item_margin"
        android:layout_marginLeft="@dimen/ingredient_item_margin"
        android:layout_marginStart="@dimen/ingredient_item_margin"

        />

    <TextView
        android:id="@+id/ingredient_steps_measure"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginEnd="@dimen/ingredient_item_margin"
        tools:text="grams"/>

    <TextView
        android:id="@+id/ingredient_steps_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:textColor="@color/colorPrimaryText"
        tools:text="Nutella or other chocolate-hazelnut spread"
        android:layout_marginEnd="@dimen/ingredient_item_margin"/>
</LinearLayout>